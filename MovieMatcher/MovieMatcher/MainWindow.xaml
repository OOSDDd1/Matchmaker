<Window x:Class="MovieMatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieMatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.DataContext>
            <local:Database/>
        </Grid.DataContext>
        <DataGrid x:Name="Datagrid1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="120,57,142,125" DataContext="{Binding a}"/>
        <Label Content="{Binding a}" HorizontalAlignment="Left" Margin="222,26,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
