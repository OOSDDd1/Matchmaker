<Window x:Class="MovieMatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieMatcher"
        xmlns:ViewModels="clr-namespace:MovieMatcher.ViewModels"
        xmlns:Views="clr-namespace:MovieMatcher.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Name="ResultViewTemplate" DataType="{x:Type ViewModels:ResultViewModel}">
            <Views:ResultView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="BlueViewTemplate" DataType="{x:Type ViewModels:BlueViewModel}">
            <Views:blue DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.504,1.25" StartPoint="0.504,0.78" SpreadMethod="Pad" MappingMode="RelativeToBoundingBox">
                <GradientStop Color="#303030" Offset="0"/>
                <GradientStop Color="Black" Offset="0.567"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="6" Margin="0,0,0,87" Grid.RowSpan="2">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.504,1.01" StartPoint="0.504,0.30">
                    <GradientStop Color="#000000" Offset="0"/>
                    <GradientStop Color="#303030" Offset="0.567"/>
                </LinearGradientBrush>
            </DockPanel.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20">
                <Button Content="Home" Click="ResultView_Clicked" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontSize="16"/>
                <Button Content="Suggestions" Click="BlueView_Clicked" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontSize="16"/>
                <Button Content="History" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontSize="16"/>
            </StackPanel>
        </DockPanel>
        <Label x:Name="Label1" Content="Label" HorizontalAlignment="Left" Margin="155,101,0,0" VerticalAlignment="Top" />

        <ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" Grid.RowSpan="4" Content="{Binding}"/>
        <Label Content="Welcome" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="16" Foreground="White" Height="31" Width="75"/>
        <Label Content="Label" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="85,0,0,0" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="16" Height="31" Width="50"/>
        <Image Grid.Column="4" Width="160" Height="85" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>